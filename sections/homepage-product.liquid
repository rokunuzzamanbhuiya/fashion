<section class="products section bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title text-center">
                    <h2>{{ section.settings.title }}</h2>
                </div>
            </div>




            {% assign our_collection = collections[section.settings.collect_product] %}

            {% for product in our_collection.products limit: section.settings.product_limit %}

            <div class="col-md-4">
                <div class="product-item">
                    <div class="product-thumb">
                        <img class="img-responsive" src="{{ product.featured_image.src | img_url: '1920x' }}"
                            alt="product-img">
                        <div class="preview-meta">
                            <ul>
                                <li>
                                    <a href="{{ product.url }}"><i class="fa fa-search"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-heart-o"></i></a>
                                </li>
                                <li>
                                    <a href=""><i class="fa fa-shopping-cart"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="product-content">
                        <h4><a href="{{ product.url }}">{{ product.title }}</a></h4>
                        <p class="price">{{ product.price | money }}</p>
                    </div>
                </div>
            </div>

            {% endfor %}


        </div>
    </div>
</section>


{% schema %}

{
"name": "Homepage Products",
"settings": [
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Trending Products"
},
{
"type": "collection",
"id": "collect_product",
"label": "Collection"
},
{
"type": "range",
"id": "product_limit",
"label": "Product Limit",
"min": 3,
"max": 9,
"default": 6
}
]
}


{% endschema %}