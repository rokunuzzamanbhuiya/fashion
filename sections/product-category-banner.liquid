"id": "category_top_left_content",
"label": "Category Top Left Content"
},
{
"type": "image_picker",
"id": "category_top_left_img",
"label": "Category Top Left Image"
},
{
"type": "url",
"id": "category_top_left_url",
"label": "Category Top Left Link"
},


{
"type": "text",
"id": "category_bottom_left_header",
"label": "Category Bottom Left Header"
},
{
"type": "text",
"id": "category_bottom_left_content",
"label": "Category Bottom Left Content"
},
{
"type": "image_picker",
"id": "category_bottom_left_img",
"label": "Category Bottom Left Image"
},
{
"type": "url",
"id": "category_bottom_left_url",
"label": "Category Bottom Left Link"
},


{
"type": "text",
"id": "category_right_header",
"label": "Category Right Header"
},
{
"type": "text",
"id": "category_right_content",
"label": "Category Right Content"
},
{
"type": "image_picker",
"id": "category_right_img",
"label": "Category Right Image"
},
{
"type": "url",
"id": "category_right_url",
"label": "Category Right Link"
}



]
}

{% endschema %}